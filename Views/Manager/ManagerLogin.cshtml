
@{
 <!--ViewData["Title"] = "ManagerLogin";-->
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/64d58efce2.js"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/login.css" />
    <title>Sign in & Sign up Form</title>
</head>
<body>
    <div class="container">
        <div class="forms-container">
            <div class="signin-signup">
                <form action="#" class="sign-in-form">
                    <h2 class="title">Manager Sign in</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="number" placeholder="Employee Number" inputmode="numeric" required />
                        <!--
                          <input type="email" id="emailField" required>
                        -->
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" minlength="4" maxlength="8" size="8" required />
                    </div>
                    <input type="submit" value="Login" asp-controller="Manager" asp-action="ManagerIndex" class="btn solid" />

                    <div style="text-decoration: none;">
                        <a class="navLink" asp-area="" asp-controller="Home" asp-action="Login">Employee login</a>
                    </div>
                </form>
                <!--Signup form-->
                <form action="#" class="sign-up-form">
                    <h2 class="title">Sign up</h2>
                    <div class="input-field">
                        <i class="fas fa-user"></i>
                        <input type="text" placeholder="Username" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-envelope"></i>
                        <input type="email" placeholder="Email" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Password" required />
                    </div>
                    <div class="input-field">
                        <i class="fas fa-lock"></i>
                        <input type="password" placeholder="Re-enter Password" required />
                    </div>
                    <input type="submit" class="btn" value="Sign up" />
                </form>
            </div>
        </div>

        <div class="panels-container">
            <div class="panel left-panel">
                <div class="content">
                    <h3>No account ? No problem!</h3>
                    <p>
                        Register Now.
                    </p>
                    <button class="btn transparent" id="sign-up-btn">
                        Sign up
                    </button>
                </div>
                <img src="~/Images/Database-PNG-Picture.png" class="image" alt="" />
            </div>
            <div class="panel right-panel">
                <div class="content">
                    <h3>Already have an account ?</h3>
                    <p>
                        You can simply sign in now.
                    </p>
                    <button class="btn transparent" id="sign-in-btn">
                        Sign in
                    </button>
                </div>
                <img src="~/Images/37227_91651_database.png" class="image" alt="" />
            </div>
        </div>
    </div>

    <script src="~/js/app.js"></script>
</body>
</html>


